{
  "name": "siv3d-playground",
  "description": "Siv3D playground for VS Code",
  "version": "0.0.19",
  "publisher": "KamenokoSoft",
  "license": "MIT",
  "enabledApiProposals": [
    "fileSearchProvider",
    "textSearchProvider"
  ],
  "private": true,
  "activationEvents": [
    "onFileSystem:memfs",
    "onFileSystem:memfs",
    "onStartupFinished",
    "onTerminalProfile:wasm.terminal"
  ],
  "browser": "./dist/extension",
  "engines": {
    "vscode": "^1.48.0"
  },
  "contributes": {
    "configuration": [
      {
        "title": "Siv3D Playground Settings",
        "properties": {
          "siv3d-playground.siv3d-assets-download-url": {
            "type": "string",
            "default": "https://siv3d-assets.kamenokosoft.com/v6",
            "description": "Download URL of Siv3D for Web Assets"
          }
        }
      }
    ],
    "viewsWelcome": [
      {
        "view": "debug",
        "contents": "In order to run and debug you'll need to create a local workspace."
      },
      {
        "view": "terminal",
        "contents": "In order to run and debug you'll need to create a local workspace."
      }
    ],
    "commands": [
      {
        "command": "siv3d-playground.compile.run",
        "title": "Compile & Run",
        "icon": "$(debug-start)",
        "category": "navigation"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "siv3d-playground.compile.run",
          "args": "emcc build",
          "when": "resourceLangId == cpp",
          "group": "navigation"
        }
      ]
    },
    "terminal": {
      "profiles": [
        {
          "title": "wasm terminal",
          "id": "wasm.terminal"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack-cli --config extension.webpack.config --mode production",
    "watch": "webpack-cli --config extension.webpack.config --mode production --watch --info-verbosity verbose",
    "prepack": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.68.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@wasmer/io-devices": "^0.12.0",
    "@wasmer/wasi": "^0.12.0",
    "@wasmer/wasmfs": "^0.12.0",
    "buffer": "^6.0.3",
    "comlink": "^4.0.5",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "shell-parse": "0.0.2",
    "shell-quote": "^1.7.1",
    "util": "^0.12.5"
  }
}
